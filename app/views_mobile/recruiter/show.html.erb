<% content_for :page_title do %>
	<%= @recruiter.name -%>
<% end %>
<section>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="inner_form">
            <% if current_user.has_role?('employer_admin')%>
            <div class="sub-menu-link">
                <%= link_to "Edit", edit_employer_recruiter_path(:employer_id => current_user.employer.id, :id => @recruiter.id) %>&nbsp;|&nbsp;
                <%= link_to "Delete", employer_recruiter_path(:employer_id => current_user.employer.id, :id => @recruiter.id), :method => :delete %>&nbsp;|&nbsp;
                <%= link_to "New", new_employer_recruiter_path(:employer_id => current_user.employer.id) -%>&nbsp;|&nbsp;
                <%= link_to "View All", employer_recruiters_path(:employer_id => current_user.employer.id)  if current_user.has_role?("employer_admin")-%>
            </div>
            <% end %>

          <div class="name-area"><label>Name:</label><%= @recruiter.name %></div>
          <div class="name-area"><label>Email:</label><%= or_unspecified(@recruiter.email) %></div>
          <div class="name-area"><label>Username:</label><%= @recruiter.username -%></div>
          <div class="name-area"><label>Password:</label><%= @recruiter.password %></div>
          <div class="name-area"><label>Roles:</label><%= @recruiter.roles %></div>
          <div class="name-area"><label>Created:</label><%= @recruiter.created_at %></div>
          <div class="name-area"><label>Last Modified On:</label><%= @recruiter.updated_at %></div>
          <div class="name-area"><label>Last Login On:</label><%= @recruiter.last_login_at %> (Count: <%=@recruiter.login_count%>)</div>
        </div>
      </div>
    </div>
  </div>
</section>